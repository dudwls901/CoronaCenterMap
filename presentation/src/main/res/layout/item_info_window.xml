<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/nameGuideImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_local_hospital_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/purple_200"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/nameGuideImageView"
        app:layout_constraintStart_toEndOf="@id/nameGuideImageView"
        tools:text="이름입니다" />

    <ImageView
        android:id="@+id/addressGuideImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_map_24"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/addressGuideImageView"
        app:layout_constraintStart_toEndOf="@id/addressGuideImageView"
        tools:text="주소입니다" />

    <ImageView
        android:id="@+id/facilityNameImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintTop_toBottomOf="@id/addressTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/facilityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/facilityNameImageView"
        app:layout_constraintStart_toEndOf="@id/facilityNameImageView"
        tools:text="병동입니다" />

    <ImageView
        android:id="@+id/phoneNumberImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintTop_toBottomOf="@id/facilityNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/phoneNumberImageView"
        app:layout_constraintStart_toEndOf="@id/phoneNumberImageView"
        tools:text="전화번호입니다" />

    <ImageView
        android:id="@+id/updatedAtImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_update_24"
        app:layout_constraintTop_toBottomOf="@id/phoneNumberTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/updatedAtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/updatedAtImageView"
        app:layout_constraintStart_toEndOf="@id/updatedAtImageView"
        tools:text="업데이트시간입니다" />

</androidx.constraintlayout.widget.ConstraintLayout>